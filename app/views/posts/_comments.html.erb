<% post.comments.each do |comment| %>
  <div class="comment">
    <div class="row">
      <% if comment.account_id == comment.post.account_id %>
        <div class="col-4 d-flex justify-content-center">
          <% if comment.account.avatar.persisted?%>
            <%= image_tag comment.account.avatar, width: "30px", class: "img-circle" %>
          <% else %>
            <%= image_tag "default.png", width: "30px"%>
          <% end %>
          <strong class="authorComment"><%= comment.account.username %></strong>
        </div>
        <div class="col d-flex"><%= comment.comment %></br></div>
        <i><%= button_to fa_icon("trash"),  comment_path(comment.id), method: :delete, data: { turbo: false } if comment.account_id == comment.post.account_id%></i>
        
      <% else %>
        <div class="row">
          <div class="col justify-content-left"><%= comment.comment %></br></div>
          <div class="col-4 d-flex justify-content-center">
            <% if comment.account.avatar.persisted?%>
              <%= image_tag comment.account.avatar, width: "30px", class: "img-circle" %>
            <% else %>
              <%= image_tag "default.png", width: "30px"%>
            <% end %>
            <strong class="anotherUserComment"><%= comment.account.username %></strong>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
