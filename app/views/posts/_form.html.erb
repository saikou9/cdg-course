<%= form_for @post, html: { multipart: true } do |f| %>

  <div class="form-group">
    <% if @post.image.present? %>
      <%= image_tag @post.image, width: "350px", class: "postImg" %></br>
    <% end %>

    <%= f.label :Image %>
    <%= f.file_field :image, class: "form-control pb-1"%>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control pb-1"%>
  </div>

  <a><%= f.submit "Save Post", class: "btn btn-primary submit"%></a>

<% end %>