<div class="row">
  <div class="col"></div>
    <div class="col d-flex justify-content-center">
      <div class="d-flex ml-2 ">
        <% if @account.avatar.persisted? %>
          <%= image_tag @account.avatar, class: "img-round"%>
        <% else %>  
          <%= image_tag "default.png", width: "200px"%>
        <% end %>
        <h1 class="me-3"><%= @account.username %></h1>
        <%= link_to fa_icon('pencil'), edit_account_registration_path if can_edit_profile?(@account.id) %>  
      </div>
    </div>
  <div class="col"></div>
  <div class="d-flex justify-content-center">
    <%= @account.description %> 
  </div>
  <% if @account.website %>
    <%= link_to @account.website, class: ""%>
  <% end %>
</div>

<div class="d-flex justify-content-center">
  <p class="p-1"><%= @account.posts.count %> posts </p>
  <p class="p-1"><%= @account.total_followers %> followers </p>
  <p class="p-1"><%= @account.total_following%> following </p>
</div>

