<section>
  <div class="suggestions">
    <div class="suggestionBox">
      <h2><span> Suggestions for you </span></h2>
      <div class="row justify-content-md-center">
        <% @follower_suggestions.each do |account|%>
          <div class="pt-4 col col-lg-2 profile">
            <%= link_to profile_picture(account, 60), profile_path(account.username) %>
            <h3 class="fw"><%= link_to account.username, profile_path(account.username), class:"profileLink" %></h3>
            <p class="text-sm"><%= account.created_at > 2.days.ago ? "New user" : "Followed by X users" %></p>
              <%= form_tag follow_account_path, method: :post do %>
                <%= hidden_field_tag :follow_id, account.id %>
                <a><%= submit_tag "Follow", class: "btnFollow" %></a>
              <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<div class="posts">
  <% @posts.each do |post| %>
    <div class="row no-gutters">
      <div class="col justify-content-end d-flex">
        <div class="imgBox">
          <%= image_tag post.image, width: "350px", class: "d-block postImg" %>
        </div>
      </div>
      <div class="col">
        <div class="textBoxBg">
          <div class="textBox">
            <div class="profileData">
              <%= link_to (image_tag post.account.avatar, width: "50px", class: "img-circle"), profile_path(post.account.username) %>
              <a><%= link_to post.account.username, profile_path(post.account.username) %></a>
            </div>
            
            <div class="row post-actions no-gutters">
              <% like = current_account.likes.find_by(post: post) %>
              <div class="col">
                <% if like.nil? %>
                  <%= button_to fa_icon('heart'), likes_path, params:{ like: { post_id: post.id }}, method: :post, class: "btn btn-primary heart" %>
                <% else %>
                  <%= button_to fa_icon("fa-light heart-crack"), like_path(like), method: :delete, class: "btn btn-primary heart" %>
                <% end %>
              </div>
                <b class="pt-2 likesText"><%= post.likes.count%> likes</b>
            </div>

            <% if post.description %>
              <div class="post-details">
                <p><strong>by <%= link_to post.account.username, profile_path(post.account.username), class: "text-black text-decoration-none" %> </strong></p>
                <p>-<%= post.description %></p>
              </div>
            <% else %>
              <p> No comments about author </p>
            <% end %>

            <%= render "posts/comments", post: post %>
            
            <div class="comment-box justify-content-md-center d-flex">
              <%= form_for @comment do |f| %>
                <%= f.hidden_field :post_id, value: post.id %>
                <div class="input-group">
                  <%= f.text_field :comment, placeholder: "Add comment here: ", class:"resizedTextbox" %>
                    <div class="input-group-append">
                      <%= f.submit "Post", class: "btn btn-primary btn-sm" %>
                    </div>
                </div>
              <% end %>
            </div>

            <b class="text-muted time"><%= time_ago_in_words post.created_at %> ago </b>

          </div>
        </div>
      </div>  
    </div>
  <% end %>
</div>