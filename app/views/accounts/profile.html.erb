<div class="container mt-3">
  <div class="row">
    <div class="col"></div>
    <div class="col d-flex justify-content-center">
      <div class="d-flex ml-2 ">
        <% if @account.avatar.url %>
          <%= image_tag @account.avatar.url, class: "img-round"%>
        <% end %>
        <h1 class="me-3"><%= @account.username %></h1>
        <%= link_to fa_icon('pencil'), edit_account_registration_path %>  
      </div>
    </div>
    <div class="col"></div>
  </div>
  <div class="d-flex justify-content-center">
    <p class="p-1"><%= @account.posts.count %> posts </p>
    <p class="p-1"><%= @account.total_followers %> followers </p>
    <p class="p-1"><%= @account.total_following%> following </p>
  </div>
</div>

<% if @account.posts.count > 0 %>
  <div class="container mt-2">
    <div class="img">
      <div class="row row-cols-3">
        <% @account.posts.each do |post| %>
          <%= image_tag post.image, width: "350px", class: "rounded mx-auto d-block" %>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div class="col d-flex justify-content-center pb-3">
    <%= link_to "Create my first post!", new_post_path, class: "btn btn-primary btn-lg px-4 me-sm-3 center" %>
  </div>
<% end %>
